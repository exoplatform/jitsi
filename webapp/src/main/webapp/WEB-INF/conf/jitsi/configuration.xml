<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
  
  <!-- Jitsi provider plugin -->
  <external-component-plugins>
    <target-component>org.exoplatform.webconferencing.WebConferencingService</target-component>
    <component-plugin>
      <name>add.callprovider</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.webconferencing.jitsi.JitsiProvider</type>
      <description>Jitsi provider for Web Conferencing.</description>
      <init-params>
        <properties-param>
          <name>provider-configuration</name>
          <property name="active" value="${webconferencing.jitsi.active:true}" />
          <property name="service-url"
            value="${webconferencing.jitsi.url:https://jitsi-dev.francecentral.cloudapp.azure.com:8486}" />
          <property name="secret"
            value="${webconferencing.jitsi.secret:mQzPudDBpSAqUwM0FY2r86gNAd6be5tN1xqwdFDOb4Us1DT4Tm}" />
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  
  <!-- 
    IM type for user profile settings. 
  -->
  <external-component-plugins>
    <target-component>org.exoplatform.social.webui.profile.settings.UserProfileRenderingService</target-component>
    <component-plugin>
      <name>profile-im-control-jitsi</name>
      <set-method>addIMControl</set-method>
      <type>org.exoplatform.webconferencing.jitsi.profile.webui.JitsiIMRenderer</type>
    </component-plugin>
  </external-component-plugins>
  
  <!-- Add Jitsi portlet to portal pages with a toolbar -->
  <external-component-plugins>
    <target-component>org.exoplatform.commons.addons.AddOnService</target-component>
    <component-plugin>
      <name>addPlugin</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.commons.addons.AddOnPluginImpl</type>
      <description>add application Config</description>
      <init-params>
        <value-param>
          <name>priority</name>
          <value>10</value>
        </value-param>
        <value-param>
          <name>containerName</name>
          <value>middle-topNavigation-container</value>
        </value-param>
        <object-param>
          <name>JitsiPortlet</name>
          <description>Jitsi portlet</description>
          <object type="org.exoplatform.portal.config.serialize.PortletApplication">
            <field name="state">
              <object type="org.exoplatform.portal.config.model.TransientApplicationState">
                <field name="contentId">
                  <string>jitsi/JitsiPortlet</string>
                </field>
              </object>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <!-- i18n resources for Jitsi -->
  <external-component-plugins>
    <target-component>org.exoplatform.services.resources.ResourceBundleService</target-component>
    <component-plugin>
      <name>ResourceBundle Plugin</name>
      <set-method>addResourceBundle</set-method>
      <type>org.exoplatform.services.resources.impl.BaseResourceBundlePlugin</type>
      <init-params>
        <values-param>
          <name>init.resources</name>
          <description>Store the following resources into the db for the first launch</description>
          <value>locale.jitsi.Jitsi</value>
        </values-param>
        <values-param>
          <name>portal.resource.names</name>
          <description>The properties files of the portal , those file will be merged into one ResoruceBundle
            properties</description>
          <value>locale.jitsi.Jitsi</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>